@model IEnumerable<FinalProject.Models.ActivityProperties>

<h1>Welcome to My ASP.NET Core Application!</h1>
<div class="background_image">
    <link rel="stylesheet" href="~/css/site.css" />
</div>

<div class="text-center font">
    <h1 class="display-4 font">Botanica Premium Services</h1>
    <p></p>

    <div>
        <a class="btn btn-outline-secondary my-3 text-fancy semi-circle text-center font" asp-page="ViewActivity">Activity</a> &nbsp;
    </div>

    <label for="course">Fun Times Loading:</label>
    <progress id="course" value="67" max="100"></progress> 67%

    <table class="tftable" border="1">
        <tr>
            <th>Strain</th>
            <th>THC</th>
            <th>CBD</th>
            <th>CBG</th>
            <th>Strain Type</th>
            <th>Climate</th>
            <th>Difficulty</th>
            <th>Fungal Resistance</th>
            <th>Indoor Yield (grams)</th>
            <th>Outdoor Yield (grams)</th>
            <th>Flowering Weeks (Min)</th>
            <th>Flowering Weeks (Max)</th>
            <th>Height (Inches) (Min)</th>
            <th>Height (Inches) (Max)</th>
            <th>Good Effects</th>
            <th>Side Effects</th>
            <th>Image</th>
        </tr>

        @foreach (var strain in Model)
        {
            <tr>
                <td>@strain.Strain</td>
                <td>@strain.THC</td>
                <td>@strain.CBD</td>
                <td>@strain.CBG</td>
                <td>@strain.StrainType</td>
                <td>@strain.Climate</td>
                <td>@strain.Difficulty</td>
                <td>@strain.FungalResistance</td>
                <td>@strain.IndoorYieldGramsMax</td>
                <td>@strain.OutdoorYieldGramsMax</td>
                <td>@strain.FloweringWeeksMin</td>
                <td>@strain.FloweringWeeksMax</td>
                <td>@strain.HeightInchesMin</td>
                <td>@strain.HeightInchesMax</td>
                <td>@strain.GoodEffects</td>
                <td>@strain.SideEffects</td>
                <td><img src="@strain.Image" alt="@strain.Strain" width="100" height="100"></td>
            </tr>
        }
    </table>
</div>
